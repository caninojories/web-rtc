.main {
  .local_video {
    video {
      display: block;
      max-width: 100%;
      border:3px solid #16a085
      border-radius: 10px;
    }
  }
  .remote_video {
    video {
      width: 100%    !important;
      height: auto   !important;
      border:3px solid #16a085
      border-radius: 10px;
    }
  }
  .textarea {
    margin: 0
    padding: 0 0 0 10px;
  }
}
